{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-preset",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "base-debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TRACY_ENABLE": "ON"
      }
    },
    {
      "name": "base-release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TRACY_ENABLE": "OFF"
      }
    },
    {
      "name": "base-windows",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "base-linux",
      "hidden": true,
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "base-darwin",
      "hidden": true,
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows (x64) Debug",
      "description": "Build for Windows x64 with MSVC (Debug)",
      "inherits": ["base-debug", "base-windows"],
      "architecture": {
        "value": "x64",
        "strategy": "set"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows (x64) Release",
      "description": "Build for Windows x64 with MSVC (Release)",
      "inherits": ["base-release", "base-windows"],
      "architecture": {
        "value": "x64",
        "strategy": "set"
      }
    },
    {
      "name": "linux-x64-debug",
      "displayName": "Linux (x64) Debug",
      "description": "Build for Linux x64 with Ninja (Debug)",
      "inherits": ["base-debug", "base-linux"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux (x64) Release",
      "description": "Build for Linux x64 with Ninja (Release)",
      "inherits": ["base-release", "base-linux"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-arm64-debug",
      "displayName": "macOS (Apple Silicon) Debug",
      "description": "Build for macOS arm64 with Ninja (Debug)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "inherits": ["base-debug", "base-darwin"],
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "macos-arm64-release",
      "displayName": "macOS (Apple Silicon) Release",
      "description": "Build for macOS arm64 with Ninja (Release)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "inherits": ["base-release", "base-darwin"],
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "macos-x86_64-debug",
      "displayName": "macOS (Intel) Debug",
      "description": "Build for macOS x86_64 with Ninja (Debug)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "inherits": ["base-debug", "base-darwin"],
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      }
    },
    {
      "name": "macos-x86_64-release",
      "displayName": "macOS (Intel) Release",
      "description": "Build for macOS x86_64 with Ninja (Release)",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "inherits": ["base-release", "base-darwin"],
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      }
    },
    {
      "$comment": "Base preset for Android builds",
      "name": "base-android",
      "hidden": true,
      "displayName": "Android Base Preset",
      "description": "Base preset for Android builds",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/android",
      "cacheVariables": {
        "CHAPTER_TO_BUILD_FOR_ANDROID": "Chapter07.1-LightingPhong",
        "CMAKE_SYSTEM_NAME": "Android",
        "CMAKE_SYSTEM_VERSION": "26",
        "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a",
        "CMAKE_ANDROID_STL_TYPE": "c++_shared",
        "CMAKE_ANDROID_NDK": "$env{ANDROID_NDK_HOME}",
        "CMAKE_ANDROID_NDK_TOOLCHAIN_VERSION": "clang"
      }
    },
    {
      "name": "android-arm64-v8a-debug",
      "displayName": "Android (arm64-v8a) Debug",
      "description": "Build for Android ARM64. Requires ANDROID_NDK_HOME to be set.",
      "inherits": ["base-debug", "base-android"],
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a"
      }
    },
    {
      "name": "android-arm64-v8a-release",
      "displayName": "Android (arm64-v8a) Release",
      "description": "Build for Android ARM64. Requires ANDROID_NDK_HOME to be set.",
      "inherits": ["base-release", "base-android"],
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a"
      }
    },
    {
      "name": "android-armeabi-v7a-debug",
      "displayName": "Android (armeabi-v7a) Debug",
      "description": "Build for Android ARM64. Requires ANDROID_NDK_HOME to be set.",
      "inherits": ["base-debug", "base-android"],
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "armeabi-v7a"
      }
    },
    {
      "name": "android-armeabi-v7a-release",
      "displayName": "Android (armeabi-v7a) Release",
      "description": "Build for Android ARM64. Requires ANDROID_NDK_HOME to be set.",
      "inherits": ["base-release", "base-android"],
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "armeabi-v7a"
      }
    },
    {
      "name": "android-x86_64-debug",
      "displayName": "Android (x86_64) Debug",
      "description": "Build for Android x86_64. Requires ANDROID_NDK_HOME to be set.",
      "inherits": ["base-debug", "base-android"],
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "x86_64"
      }
    },
    {
      "name": "android-x86_64-release",
      "displayName": "Android (x86_64) Release",
      "description": "Build for Android x86_64. Requires ANDROID_NDK_HOME to be set.",
      "inherits": ["base-release", "base-android"],
      "cacheVariables": {
        "CMAKE_ANDROID_ARCH_ABI": "x86_64"
      }
    },
    {
      "$comment": "TODO: Need more robust system. Android Debug preset for Chapter01",
      "name": "android-arm64-v8a-debug-chapter01",
      "displayName": "Android arm64-v8a Debug (Chapter01)",
      "description": "Build for Android arm64-v8a Debug (Chapter01). Requires ANDROID_NDK_HOME to be set.",
      "inherits": "android-arm64-v8a-debug",
      "cacheVariables": {
        "CHAPTER_TO_BUILD_FOR_ANDROID": "Chapter01-Window"
      }
    },
    {
      "name": "android-arm64-v8a-debug-chapter02.1",
      "displayName": "Android arm64-v8a Debug (Chapter02.1)",
      "description": "Build for Android arm64-v8a Debug (Chapter02.1). Requires ANDROID_NDK_HOME to be set.",
      "inherits": "android-arm64-v8a-debug",
      "cacheVariables": {
        "CHAPTER_TO_BUILD_FOR_ANDROID": "Chapter02.1-Point"
      }
    },
    {
      "name": "android-arm64-v8a-debug-chapter02.2",
      "displayName": "Android arm64-v8a Debug (Chapter02.2)",
      "description": "Build for Android arm64-v8a Debug (Chapter02.2). Requires ANDROID_NDK_HOME to be set.",
      "inherits": "android-arm64-v8a-debug",
      "cacheVariables": {
        "CHAPTER_TO_BUILD_FOR_ANDROID": "Chapter02.2-Triangle"
      }
    },
    {
      "name": "android-arm64-v8a-debug-chapter07.1",
      "displayName": "Android arm64-v8a Debug (Chapter07.1)",
      "description": "Build for Android arm64-v8a Debug (Chapter07.1-LightingPhong). Requires ANDROID_NDK_HOME to be set.",
      "inherits": "android-arm64-v8a-debug",
      "cacheVariables": {
        "CHAPTER_TO_BUILD_FOR_ANDROID": "Chapter07.1-LightingPhong"
      }
    },
    {
      "name": "web-base",
      "hidden": true,
      "displayName": "Web Base Preset",
      "description": "Base preset for Web builds",
      "inherits": "base-preset",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/web-build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
      }
    },
    {
      "name": "web-debug",
      "displayName": "Web (Emscripten) Debug",
      "description": "Build for WebAssembly. Requires EMSDK to be set and configured.",
      "inherits": ["base-debug", "web-base"]
    },
    {
      "name": "web-release",
      "displayName": "Web (Emscripten) Release",
      "description": "Build for WebAssembly. Requires EMSDK to be set and configured.",
      "inherits": ["base-release", "web-base"]
    },
    {
      "name": "ios-universal",
      "displayName": "iOS Universal (Xcode)",
      "description": "Builds a universal binary for all iOS devices and simulators.",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/ios-universal",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "iOS",
        "CMAKE_OSX_ARCHITECTURES": "arm64;x86_64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "13.0",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/ios-install",
        "CMAKE_XCODE_ATTRIBUTE_ONLY_ACTIVE_ARCH": "NO",
        "CMAKE_IOS_INSTALL_COMBINED": "YES"
      }
    },
    {
      "name": "ios-simulator-debug",
      "displayName": "iOS Simulator (Debug)",
      "description": "Build for the iOS Simulator (Debug)",
      "inherits": ["base-debug", "base-darwin"],
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/ios.toolchain.cmake",
        "CMAKE_OSX_ARCHITECTURES": "arm64;x86_64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "base-build",
      "hidden": true,
      "jobs": 16,
      "verbose": false
    },
    {
      "name": "windows-x64-debug",
      "configurePreset": "windows-x64-debug",
      "inherits": "base-build"
    },
    {
      "name": "windows-x64-release",
      "configurePreset": "windows-x64-release",
      "inherits": "base-build"
    },
    {
      "name": "linux-x64-debug",
      "configurePreset": "linux-x64-debug",
      "inherits": "base-build"
    },
    {
      "name": "linux-x64-release",
      "configurePreset": "linux-x64-release",
      "inherits": "base-build"
    },
    {
      "name": "macos-arm64-debug",
      "configurePreset": "macos-arm64-debug",
      "inherits": "base-build"
    },
    {
      "name": "macos-arm64-release",
      "configurePreset": "macos-arm64-release",
      "inherits": "base-build"
    },
    {
      "name": "macos-x86_64-debug",
      "configurePreset": "macos-x86_64-debug",
      "inherits": "base-build"
    },
    {
      "name": "macos-x86_64-release",
      "configurePreset": "macos-x86_64-release",
      "inherits": "base-build"
    },
    {
      "name": "web-debug",
      "configurePreset": "web-debug",
      "inherits": "base-build"
    },
    {
      "name": "web-release",
      "configurePreset": "web-release",
      "inherits": "base-build"
    },
    {
      "name": "android-gradle-debug",
      "displayName": "Build with Gradle (Debug)",
      "description": "Runs './gradlew installDebug' for the specified chapter.",
      "jobs": 1,
      "targets": ["runGradleBuildDebug"]
    },
    {
      "name": "android-gradle-release",
      "displayName": "Build with Gradle (Release)",
      "description": "Runs './gradlew installRelease' for the specified chapter.",
      "jobs": 1,
      "targets": ["runGradleBuildRelease"]
    }
  ],
  "testPresets": [
    {
      "name": "base-test",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    },
    {
      "name": "windows-x64-debug",
      "configurePreset": "windows-x64-debug",
      "inherits": "base-test"
    },
    {
      "name": "windows-x64-release",
      "configurePreset": "windows-x64-release",
      "inherits": "base-test"
    },
    {
      "name": "linux-x64-debug",
      "configurePreset": "linux-x64-debug",
      "inherits": "base-test"
    },
    {
      "name": "linux-x64-release",
      "configurePreset": "linux-x64-release",
      "inherits": "base-test"
    },
    {
      "name": "macos-arm64-debug",
      "configurePreset": "macos-arm64-debug",
      "inherits": "base-test"
    },
    {
      "name": "macos-arm64-release",
      "configurePreset": "macos-arm64-release",
      "inherits": "base-test"
    },
    {
      "name": "macos-x86_64-debug",
      "configurePreset": "macos-x86_64-debug",
      "inherits": "base-test"
    },
    {
      "name": "macos-x86_64-release",
      "configurePreset": "macos-x86_64-release",
      "inherits": "base-test"
    }
  ],
  "packagePresets": [
    {
      "name": "windows-x64-release-package",
      "configurePreset": "windows-x64-release",
      "description": "Create Windows installer and .zip package",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "generators": [
        "ZIP",
        "NSIS"
      ],
      "variables": {
        "CPACK_PACKAGE_NAME": "MyAwesomeApp",
        "CPACK_PACKAGE_VENDOR": "ADÜ",
        "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "An awesome application that does awesome things.",
        "CPACK_PACKAGE_VERSION": "1.0.0",
        "CPACK_RESOURCE_FILE_LICENSE": "${sourceDir}/LICENSE.txt",
        "CPACK_RESOURCE_FILE_README": "${sourceDir}/README.md",
        "CPACK_NSIS_PACKAGE_NAME": "MyAwesomeApp 1.0.0",
        "CPACK_NSIS_INSTALLER_ICON_CODE": "${sourceDir}/packaging/windows/installer_icon.ico",
        "CPACK_NSIS_MUI_FINISHPAGE_RUN": "$INSTDIR\\\\bin\\\\MyAwesomeApp.exe",
        "CPACK_NSIS_CREATE_ICONS_EXTRA": "CreateShortCut '$DESKTOP\\\\MyAwesomeApp.lnk' '$INSTDIR\\\\bin\\\\MyAwesomeApp.exe'"
      }
    },
    {
      "name": "linux-x64-release-package",
      "configurePreset": "linux-x64-release",
      "description": "Create Linux .deb and .tar.gz package",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "generators": [
        "DEB",
        "RPM",
        "TGZ"
      ],
      "variables": {
        "CPACK_PACKAGE_NAME": "myawesomeapp",
        "CPACK_PACKAGE_VENDOR": "ADÜ",
        "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "An awesome application that does awesome things.",
        "CPACK_PACKAGE_VERSION": "1.0.0",
        "CPACK_RESOURCE_FILE_LICENSE": "${sourceDir}/LICENSE.txt",
        "CPACK_RESOURCE_FILE_README": "${sourceDir}/README.md",
        "CPACK_DEBIAN_PACKAGE_SECTION": "devel",
        "CPACK_DEBIAN_PACKAGE_PRIORITY": "optional",
        "CPACK_RPM_PACKAGE_GROUP": "Development/Tools",
        "CPACK_RPM_PACKAGE_LICENSE": "MIT"
      }
    },
    {
      "name": "macos-arm64-release-package",
      "configurePreset": "macos-arm64-release",
      "description": "Create macOS App Bundle and .tar.gz package",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "generators": [
        "Bundle",
        "DragNDrop",
        "TGZ"
      ],
      "variables": {
        "CPACK_PACKAGE_NAME": "MyAwesomeApp",
        "CPACK_PACKAGE_VENDOR": "My Company Inc.",
        "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "An awesome application that does awesome things.",
        "CPACK_PACKAGE_VERSION": "1.0.0",
        "CPACK_RESOURCE_FILE_LICENSE": "${sourceDir}/LICENSE.txt",
        "CPACK_RESOURCE_FILE_README": "${sourceDir}/README.md",
        "CPACK_BUNDLE_NAME": "MyAwesomeApp",
        "CPACK_BUNDLE_ICON": "${sourceDir}/packaging/macos/icon.icns",
        "CPACK_BUNDLE_PLIST": "${sourceDir}/packaging/macos/Info.plist",
        "CPACK_DMG_BACKGROUND_IMAGE": "${sourceDir}/packaging/macos/dmg_background.png"
      }
    },
    {
      "name": "macos-x86_64-release-package",
      "configurePreset": "macos-x86_64-release",
      "description": "Create macOS App Bundle and .tar.gz package",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "generators": ["Bundle", "DragNDrop", "TGZ"],
      "variables": {
        "CPACK_PACKAGE_NAME": "MyAwesomeApp",
        "CPACK_PACKAGE_VENDOR": "My Company Inc.",
        "CPACK_PACKAGE_DESCRIPTION_SUMMARY": "An awesome application that does awesome things.",
        "CPACK_PACKAGE_VERSION": "1.0.0",
        "CPACK_RESOURCE_FILE_LICENSE": "${sourceDir}/LICENSE.txt",
        "CPACK_RESOURCE_FILE_README": "${sourceDir}/README.md",
        "CPACK_BUNDLE_NAME": "MyAwesomeApp",
        "CPACK_BUNDLE_ICON": "${sourceDir}/packaging/macos/icon.icns",
        "CPACK_BUNDLE_PLIST": "${sourceDir}/packaging/macos/Info.plist",
        "CPACK_DMG_BACKGROUND_IMAGE": "${sourceDir}/packaging/macos/dmg_background.png"
      }
    }
  ],
  "workflowPresets": [
  ]
}
